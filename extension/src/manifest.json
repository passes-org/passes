{
  "manifest_version": 3,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "world": "MAIN",
      "run_at": "document_start",
      "js": ["src/content/document.passes-api/main.ts"]
    },
    {
      "matches": ["https://*/*"],
      "world": "ISOLATED",
      "run_at": "document_start",
      "js": ["src/content/document.passes-api/isolated.ts"],
      "css": ["src/content/document.passes-api/isolated.ts"]
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ]
}
